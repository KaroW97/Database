 <%- include('../partials/infoMessages.ejs') %> 


<button href="#" id ="showForm" onclick="showFormm()">Dodaj firme</button>
<form id="myForm" method="POST"  action="/shopping-list" style="display: none;">
    <select id ="select"name="brandName" >
        <% brandName.forEach(brand => { %>
            <% if(brand.id === shopping.listName){ %>
                <option selected label="<%=brand.name%>" value="<%=brand.id%>"><%=brand.name%></option>
            <% }else{ %>
                <option  label="<%=brand.name%>" value="<%=brand.id%>"><%=brand.name%></option>
            <% } %>
        <%}); %>
        </select>
        <button type="submit">Dodaj</button>
</form>

<form method="POST" action="/shopping-list?_method=DELETE">
    <input type="submit" value="UsuÅ„">
    <table>
        <thead>
            <tr>
                <td>Nazwa Listy</td>
                <td>Cena</td>
                <td>Data</td>
            </tr>
        </thead>
        <tbody>
            
            <% shopping.forEach(items => {%>
                <tr>
                   

                    
                    <td  onclick="window.location='/shopping-list/list-view/<%=items.id%>'"><%=items.listName.name  == null? '':items.listName.name %></td>
                    <td  onclick="window.location='/shopping-list/list-view/<%=items.id%>'"><%=items.totalPrice %></td>
                    <td  onclick="window.location='/shopping-list/list-view/<%=items.id%>'"><%= items.transactionDate == null ? '' : items.transactionDate.toISOString().split('T')[0] %> </td>
                    <td><input type="checkbox" name="chackboxDelete" value="<%=items.id%>"></td>
                </tr>
           <% }); %> 
        </tbody>
    </table>
</form>



<form method="POST" action="/shopping-list/brand-name" >
    <div style="display: none;" id ="comapnyForm" >
        <span id ="close"class="close" onclick="closeForm()">&times;</span>
        <input id ="input"type="text" name="name" placeholder="Dodaj nazwe firmy" value="<%=brandName.name%>" required autofocus >
        <button type="submit">Dodaj</button>
    </div>
</form>
