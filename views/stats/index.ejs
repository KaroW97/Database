
<%-include('../partials/toogleListClients.ejs')%>

<div class="center-main-div ">
    <div class="main-div toogleList">
        <div class="content  ">
            <div class="visit">
                <form class="find-visit"  method="GET" action="/statistics">
                    <div class="search-wrapper ui-widget">
                        <input type="text"class="myInputSearch client-search"placeholder="Szukaj Klienta">

                    </div>
                    <div class="data-input-from ">
                        <input  id="dataFrom" name="dateFrom"  placeholder="Od" value="<%=searchOptions.dateFrom%>" autocomplete="off">
                    </div>
                    <div class="data-input-to">
                        <input  id="dataTo" name="dateTo"  placeholder="Do"value="<%=searchOptions.dateTo%>" autocomplete="off">

                    </div>
                    <div class="search">
                        <button type="submit" class="search-button" aria-label="search"><i class="fas fa-search"></i></button>
                    </div>
                </form>
             
            </div>
        </div>
    </div>
</div>

<div class="main-div-full-content .main-div-toogle">
    <div class="main-div-center ">
        
            <div class="content-div">
                <% for(var i = 0 ; i< clients.length ; i++){%>
                    <% sum=0 %> 
                    <%addedVisist.forEach(element => { %> 
                        <%element.treatment == null ?'' :clients[i].id == element.client ?sum +=element.treatment.treatmentPrice:0 %>
                    <%});%> 
                    <div class="visit">
            
                        <div class="div-element"  onclick="window.location='/statistics/<%=clients[i].id%>'" >
                            <p class="header" client="<%=clients[i].name%> <%=clients[i].lastName%>">
                                <%=clients[i].name%> <%=clients[i].lastName%></p>
                            <div class="first-p-element">
                                <p class="headerVisit">Wydana Kwota</p>
                                <p ><%=sum %>z≈Ç</p>
                            </div>
                      
                                               
                        </div>
                    </div> 
                   
                   
                <%} %> 
            </div>
    </div>
</div>






