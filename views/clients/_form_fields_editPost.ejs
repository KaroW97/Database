<div>
    <input id ="input"  type="date" name="clientVisitDate" 
    value= "<%=newVisit.clientVisitDate == null ? '': newVisit.clientVisitDate.toISOString().split('T')[0] %>" >
</div>
<div>
    <select name="treatment">
    <% treatments.forEach(treatment => { %>
        <%if(treatment && newVisit.treatment&& treatment.treatmentName!= null) {%> 
            <% if( treatment.treatmentName === newVisit.treatment.treatmentName){ %>
                <option selected label="<%=treatment.treatmentName%>" value="<%=treatment.id%>"><%=newVisit.treatment.treatmentName%></option>
            <% }else{ %>
                <option  label="<%=treatment.treatmentName%>" value="<%=treatment.id%>"><%=treatment.treatmentName%></option>
        <% } }else{%>
            <option  label="<%=treatment.treatmentName%>" value="<%=treatment.id%>"><%=treatment.treatmentName%></option>
        <% } %> 
       
    <%});  %>
    </select>
</div>
<div>

    <textarea  maxlength="150" placeholder="Dodaj diagnoze" name="comment" value="<%=newVisit.comment%>"><%=newVisit.comment%></textarea>
</div>
<div>

    <textarea id="shopping"maxlength="150" placeholder="Dodaj zakupy" name="shopping" value="<%=newVisit.shopping%>"><%=newVisit.shopping%></textarea>
</div>