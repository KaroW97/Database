    <label for="diagnose-<%=id_extention%>">Diagnoza</label>
</div>
<div class="input-field col s12">
    <i class="material-icons prefix">add_shopping_cart</i>
    <textarea id="shopping-<%=id_extention%>" class="materialize-textarea"  name="shopping"></textarea>
