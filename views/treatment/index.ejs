


<%-include('../partials/infoMessages.ejs')%>

<div  class="center-main-div">
    <div class="main-div">
        <div class="content">
            <div class="visit">
                    <form class="find-visit" method="GET">
                            <div class="data-input-from ui-widget">
                                <input id="treatmentName" class="myInputSearch treatment-search"name="treatmentName" placeholder="Nazwa zabiegu" value="<%=searchOptions.name  %>" autocomplete="off">
                            </div>
                   
                    </form>
                    <div class="add">
                        <button class="button_action showForm " ><i class="fas fa-plus"></i></button>
                    </div>
                    <div class="treatments-list create">
                        <ul class="listTreatment list"  >
                            <% treatment.forEach(treatment => { %>
                                <li value="<%=treatment._id%>"><%=treatment.treatmentName%></li>
                            <%}); %>
                        </ul>
                    </div>
            </div>
        </div>
    </div>
</div>
<div class="main-div-full-content">
    <div class="main-div-center  ">
        <div class="content-div">
   
            <% for(var i = 0 ; i< treatment.length ; i++){%>
                <div class="visit">
                    <form method="post" action='/treatment/<%=treatment[i]._id%>?_method=DELETE'>
                        <button type="submit" class="close" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </form>  
              
                    <div class="div-element" 
                    action="/treatment/edit/<%=treatment[i]._id%>?_method=PUT"
                    treatmentName="<%=treatment[i].treatmentName%> " 
                    treatmentPrice="<%=treatment[i].treatmentPrice != null ? treatment[i].treatmentPrice:'ss'%> " 
                    >

                        <div class="header">
                            <p  ><%=treatment[i].treatmentName%> </p>  
                        </div>
                        <div class="first-p-element">
                            <p class="headerVisit">Cena</p>
                            <p ><%=treatment[i].treatmentPrice != null ? treatment[i].treatmentPrice +'zÅ‚' : '-'%></p>
                        </div>
                 
                                         
                    </div>
                </div>   
            <%} %> 
         
        </div>
    </div>

</div>
<div class="create-visit-form openForm close-form " id="visitForm">
    <form method="POST" action="" class="center-form formEdit">
        <div   class="form">
            <!--onclick="closeForm()"-->
            <span id ="close"class="close" >&times;</span>
            <div class="form-content">
               
                <input type="text" class="treatmentNameEdit"  placeholder="Nazwa" value=""  name="treatmentNameEdit"  required >
                <input type="number" class="treatmentPriceEdit" placeholder="Cena" value="" name="treatmentPriceEdit" required>
                <button type="submit">Edytuj</button>     
             
            </div>
   
        </div>
    </form>
</div>
<div class="create-visit-form form close-form create-form" id="visitForm">
    <form method="POST" action="/treatment" class="center-form">
        <div   class="form">

            <span id ="close"class="close" >&times;</span>
            <div class="form-content">
                <%-include('./_form_fields.ejs')%>          
                <button type="submit">Dodaj</button>
               </div>
   
        </div>
    </form>
</div>

<div  class="statistics"></div>
