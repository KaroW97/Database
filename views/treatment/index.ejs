<h2>All Treatments</h2>
<%-include('../partials/infoMessages.ejs')%>
<form method="GET">
    <label id="treatmentName"></label>
    <input id="treatmentName"name="treatmentName" placeholder="Nazwa zabiegu" value="<%=searchOptions.name  %>" autofocus>
</form>
<button onclick="showFormm() " >Add Treatment</button>

<form method="post" action="/treatment?_method=DELETE">
    <input type="submit" value="UsuÅ„">
    <table>
        <thead>
            <tr>
                <th >Nazwa</th>
                <th >Cena</th>
                <th></th>
            </tr>
        </thead>
        <tbody>   
            <% treatment.forEach(treatment => {%>
                    <tr>
                        <td onclick="showEditForm(`<%=treatment.treatmentName%>`,`<%=treatment.treatmentPrice%>`,null,`treatment/edit/<%=treatment.id%>?_method=PUT`)"><%=treatment.treatmentName%></td>
                        <td onclick="showEditForm(`<%=treatment.treatmentName%>`,`<%=treatment.treatmentPrice%>`,null,`treatment/edit/<%=treatment.id%>?_method=PUT`)"><%=treatment.treatmentPrice%></td>
                        <td><input type="checkbox" name="chackboxDelete" value="<%=treatment.id%>"></td>
                       
                    </tr>
            <% });%>
         
        </tbody>
    </table>
    
</form>

<div id="popUpPage" style="display: none">
    <form id="editForm" method="post" action="">
        <span id ="close"class="close" onclick="closeEditForm()">&times;</span>
        <label for="input"></label>
        <input type="text" id="productName" placeholder="Nazwa" value=""  name="treatmentName"  required >
    
        <label for="treatmentPrice"></label>
        <input type="number" id="productPrice" placeholder="Cena" value="" name="treatmentPrice" required>
        <button type="submit">Edytuj</button>
    </form>
</div>

